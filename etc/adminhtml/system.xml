<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="dev">
            <group id="require_js_optimizer" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Require JS Optimizer</label>
                <field id="debug" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Debug RequireJS dependencies</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <hint>This adds a console message for each RequireJS dependency being loaded</hint>
                </field>
            </group>
        </section>
    </system>
</config>
